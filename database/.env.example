# Configurações do Banco de Dados PostgreSQL
# Sistema Acervo Educacional

# Configurações de Conexão
DB_HOST=localhost
DB_PORT=5432
DB_NAME=acervo_educacional
DB_USER=postgres
DB_PASSWORD=postgres

# String de Conexão Completa (alternativa)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/acervo_educacional

# Configurações do Pool de Conexões
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Todo dia às 2h da manhã
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/acervo-educacional

# Configurações de Monitoramento
DB_MONITORING_ENABLED=true
DB_SLOW_QUERY_THRESHOLD=1000  # em millisegundos
DB_LOG_LEVEL=INFO

# Configurações de Segurança
DB_SSL_MODE=prefer
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=
DB_SSL_CA_PATH=

# Configurações de Performance
DB_SHARED_BUFFERS=256MB
DB_EFFECTIVE_CACHE_SIZE=1GB
DB_WORK_MEM=4MB
DB_MAINTENANCE_WORK_MEM=64MB

# Configurações de Desenvolvimento
DB_ENABLE_LOGGING=true
DB_LOG_QUERIES=false
DB_AUTO_MIGRATE=true

