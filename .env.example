# Configurações do Banco de Dados
POSTGRES_PASSWORD=AcervoSecure123!
REDIS_PASSWORD=RedisSecure123!

# Configurações JWT
JWT_SECRET_KEY=SuperSecretKeyForJWTTokenGeneration123456789
JWT_ISSUER=AcervoEducacional
JWT_AUDIENCE=AcervoEducacionalUsers

# Configurações AWS S3
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_BUCKET_NAME=acervo-educacional
AWS_REGION=us-east-1

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Configurações Senior (Opcional)
SENIOR_CONNECTION_STRING=Server=senior_server;Database=senior_db;User Id=senior_user;Password=senior_pass;

# Configurações Hangfire
HANGFIRE_USERNAME=admin
HANGFIRE_PASSWORD=HangfireSecure123!

# Configurações de Ambiente
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production

# URLs da Aplicação
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
API_URL=http://localhost:5000/api

# Configurações de Segurança
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,yourdomain.com

# Configurações de Logs
LOG_LEVEL=Information
LOG_FILE_PATH=/app/logs/

# Configurações de Upload
MAX_FILE_SIZE=524288000
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.ppt,.pptx,.mp4,.mp3,.jpg,.png,.gif

# Configurações de Cache
CACHE_EXPIRATION_MINUTES=60
SESSION_TIMEOUT_MINUTES=480

# Configurações de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Configurações de Backup
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Configurações SSL (Para produção)
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/private.key

# Configurações de Monitoramento
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Configurações de Performance
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT_SECONDS=30
COMMAND_TIMEOUT_SECONDS=60

